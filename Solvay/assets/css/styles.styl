        position fixed
        top 50%
        left 50%
        transform translate(-50%,-50%)
        background linear-gradient(to bottom, #F2F2F2 0%,#ffffff 40%,#ffffff 100%)
        border-top 4px solid $primaryColor
        box-shadow 0px 7px 8px rgba(51, 102, 153, 0.2)
        width 300px
        padding 10px !important
        font-size 16px !important
        color #7b8c9d !important
        .webrtc-incomingcall-msg
            padding 10px 0 !important
        .webrtc-call__buttons
            display block
        
video-call-reciever
