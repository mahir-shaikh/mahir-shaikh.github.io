
/* no ui slider */
.noUi
    &-target
        box-shadow none
        border none
        background-color #bec0c1
        &^[0]-horizontal
            height 7px
            background #4F5253
            border 0px
            box-shadow inset 0 1px 1px #f0f0f0, 4px 1px 0px 0px #4f5253
        &^[0]-vertical
            width 1px
    &-horizontal &-handle
        border-radius 50%
        border 3px solid #FFF
        box-shadow 0 0 3px #333
        background #179AB5 !important
        width 13px !important
        height 13px !important
        left -6px !important
        top -3px !important
        text-align center
        line-height 28px
        color #fff
        font-size 0.625em
        cursor pointer
        &:before,&:after
            display none
    &-pips
        height 30px
        padding 0 !important
    &-connect
        background #179AB5 !important
        left -1% !important
        
    &-marker
        &-horizontal, &-vertical
            &^[1]-normal
                display none
            &^[1]-large
                height 3px !important
                top -5px
                width 3px !important
                background #FFF
                z-index 1
                &:first-child
                    margin-left -1px !important
                &:last-child
                    margin-left -4px !important
            &^[1]-sub
                height 3px !important
                top -5px
                width 3px !important
                background #FFF
                z-index 1
    &-value
        &-horizontal, &-vertical
            &^[1]-sub, &^[1]-large
                font-size 10px
                text-transform uppercase
                color #000
                transform translate(-50%,50%)
                @media screen and (max-width 1024px)
                    font-size 8px
